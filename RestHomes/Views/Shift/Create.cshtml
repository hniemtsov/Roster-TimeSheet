@model RestHomes.Models.CreateShiftModel

@{
    ViewBag.Title = "Create Shift";
}

<h2>Create Shift</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Start, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Start, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Start)
            </div>
                @Html.LabelFor(model => model.End, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.End, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.End)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Hours, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Hours, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Hours)
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-default"})
    </div>
}